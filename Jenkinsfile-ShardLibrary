@Library('mySharedLibrary') _

def buildTag = ''

pipeline {
    agent { label 'build-agent' }

    parameters {
        string(name: 'APP_VERSION', defaultValue: '1.0.0')
        choice(name: 'ENV', choices: ['dev', 'staging', 'prod'])
        string(name: 'BRANCH', defaultValue: 'master')
        booleanParam(name: 'DEPLOY', defaultValue: true)
    }

    environment {
        SONAR_PROJECT_KEY = "sampleapp"
        SONAR_HOST_URL    = "http://20.75.196.235:9000"
        SONAR_TOKEN       = credentials('sonarkube-swathipothula')

        K8S_NAMESPACE = "${ENV}"
        HELM_RELEASE  = "flask-${ENV}"
    }

    stages {

        stage('Checkout') {
            steps {
                git url: 'https://github.com/sathish-itc/simple-webapp-flask',
                    branch: "${params.BRANCH}"
            }
        }

        stage('Sonar Scan') {
            steps {
                sonarScan(
                    scannerName: 'mysonarscanner',
                    sonarServer: 'sonarkube-swathi',
                    projectKey : SONAR_PROJECT_KEY,
                    hostUrl    : SONAR_HOST_URL,
                    token      : SONAR_TOKEN
                )
            }
        }

        stage('Sonar Quality Gate') {
            when {
                expression { params.ENV == 'prod' }
            }
            steps {
                sonarQualityGate()
            }
        }

        stage('Create Artifact') {
            steps {
                sonarArtifact(
                    name   : 'flask-app',
                    version: params.APP_VERSION
                )
            }
        }

        stage('Deploy to Kubernetes') {
            when {
                expression { params.DEPLOY }
            }
            steps {
                helmDeploy(
                    release  : HELM_RELEASE,
                    chartPath: './helm',
                    namespace: K8S_NAMESPACE,
                    imageTag : buildTag
                )
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
    }
}
